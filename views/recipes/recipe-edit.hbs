<div class="container mt-5">
    <h1>Edit {{recipe.title}}</h1>
    <form action="/recipes/{{this.recipe._id}}/edit" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="img" class="form-label">Recipe Image</label>
        <input type="file" class="form-control" name="img" accept="image/*" />
        <img src="{{recipe.img}}" width="400px" alt="Current Image" width="100" height="100" class="mt-2" />
      </div>
      
      <div class="mb-3">
        <label for="title" class="form-label">Recipe Title</label>
        <input type="text" class="form-control" value="{{recipe.title}}" name="title" />
      </div>

      <div class="mb-3">
        <label for="time" class="form-label">Time</label>
        <input type="text" class="form-control" value="{{recipe.time}}" name="time" />
      </div>

      <div class="mb-3">
        <label for="ingredients" class="form-label">Ingredients</label>
        <textarea class="form-control" name="ingredients">{{recipe.ingredients}}</textarea>
      </div>

      <div class="mb-3">
        <label for="potatoes" class="form-label">Best Potatoes for this Recipe:</label>
        <br>
        {{#each allPotatoes}}
          <label class="form-check">
            <input type="checkbox" class="form-check-input" name="potatoes" value="{{this._id}}" {{#if isSelected}}checked="checked"{{/if}}>
            {{this.name}}
          </label>
          <br>
        {{/each}}
      </div>

      <button type="submit" class="btn btn-primary">Edit Recipe</button>
    </form>
</div>
