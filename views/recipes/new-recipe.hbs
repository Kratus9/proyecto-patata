<form action="/recipes/new-recipe" method="POST" enctype="multipart/form-data">
  <label for="img">Recipe image</label>
  <input type="file" name="img" accept="image/*" />
  
  <br />
  
  <label for="title">Recipe title</label>
  <input type="text" name="title"/>

  <br />

  <label for="time">Time</label>
  <input type="text" name="time"/>

  <br />

  <label for="ingredients">Ingredients</label>
  <input type="text" name="ingredients">

  <br />

<label for="potatoes" class="form-label">Best potatoes to this recipe: </label>
<br>
{{#each this.allPotatoes}}
  <label>
    <input type="checkbox" name="potatoes[]" value="{{this._id}}">
    {{this.name}}
  </label>
  <br>
{{/each}}

  <br />

  <label for="instructions">Instructions</label>
  <textarea name="instructions" cols="30" rows="10"></textarea>

  <br />

  <button type="submit">Add recipe</button>
</form>